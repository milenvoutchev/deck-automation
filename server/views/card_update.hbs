<section>
    <form method="post">
        {{>card_update_actions}}

        <h1>{{wordDe}}</h1>

        <fieldset>
            <div class="form-group row">
                <label for="wordDe" class="col-sm-3 col-form-label">German</label>
                <div class="col-sm-9">
                    <input class="form-control" placeholder="German" name="wordDe" value="{{wordDe}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="wordEn" class="col-sm-3 col-form-label">English</label>
                <div class="col-sm-9">
                    <input class="form-control" placeholder="English" name="wordEn" value="{{wordEn}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="lautschrift" class="col-sm-3 col-form-label">IPA</label>
                <div class="col-sm-9">
                    <input class="form-control" placeholder="IPA" name="lautschrift" value="{{lautschrift}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="wordType" class="col-sm-3 col-form-label">Word Type</label>
                <div class="col-sm-9">
                    <input class="form-control" placeholder="Word Type" name="wordType" value="{{wordType}}">
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label for="wordType" class="col-sm-3 col-form-label">Verb Present 3rd</label>
                <div class="col-sm-9"><input class="form-control" placeholder="Verb Present 3rd"
                        name="verbPresentThirdPerson"
                        value="{{verbPresentThirdPerson}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="verbPreteriteFirstPerson" class="col-sm-3 col-form-label">Verb Preterite 1st</label>
                <div class="col-sm-9">
                    <input class="form-control" placeholder="Verb Preterite 1st" name="verbPreteriteFirstPerson"
                            value="{{verbPreteriteFirstPerson}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="verbPreteriteThirdPerson" class="col-sm-3 col-form-label">Verb Preterite 3rd</label>
                <div class="col-sm-9"><input class="form-control" placeholder="Verb Preterite 3rd"
                        name="verbPreteriteThirdPerson" value="{{verbPreteriteThirdPerson}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="verbPerfectAuxiliaryThird" class="col-sm-3 col-form-label">Verb Perfect Auxiliary 3d</label>
                <div class="col-sm-9"><input class="form-control" placeholder="Verb Perfect Auxiliary 3d"
                        name="verbPerfectAuxiliaryThird" value="{{verbPerfectAuxiliaryThird}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="verbPastParticiple" class="col-sm-3 col-form-label">Verb Past Participle</label>
                <div class="col-sm-9"><input class="form-control" placeholder="Verb Past Participle"
                        name="verbPastParticiple" value="{{verbPastParticiple}}">
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label for="nounArticle" class="col-sm-3 col-form-label">Noun Article</label>
                <div class="col-sm-9"><input class="form-control" placeholder="Noun Article" name="nounArticle"
                        value="{{nounArticle}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="nounPlural" class="col-sm-3 col-form-label">Noun Plural</label>
                <div class="col-sm-9">
                    <input class="form-control" placeholder="Noun Plural" name="nounPlural" value="{{nounPlural}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="nounGender" class="col-sm-3 col-form-label">Noun Gender</label>
                <div class="col-sm-9">
                    <input class="form-control" placeholder="Noun Gender" name="nounGender" value="{{nounGender}}">
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm">
                    <label for="exampleSentenceDe">Example DE</label>
                    <textarea class="form-control" rows="9" name="exampleSentenceDe">{{exampleSentenceDe}}</textarea>
                </div>
                <div class="form-group col-sm">
                    <label for="exampleSentenceEn">Example EN</label>
                    <textarea class="form-control" rows="9" name="exampleSentenceEn">{{exampleSentenceEn}}</textarea>
                </div>
            </div>
        </fieldset>

        {{#if examples}}
            <fieldset>
                <h3>All examples:</h3>

                <table class="table table-responsive table-striped">
                    <tbody class="">
                    {{#each examples}}
                        <tr>
                            <td>{{de}}</td>
                            <td>{{en}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </fieldset>
        {{/if}}

        <!-- insert -->
        <input type="hidden" name="sources" value="{{json sources}}">

        {{#if _id}}
            <!-- update -->
            <input type="hidden" name="_id" value="{{_id }}">
        {{/if}}

        {{>card_update_actions}}

    </form>
</section>
