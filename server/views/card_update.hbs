<h1>{{wordDe}}</h1>

<section>
    <form method="post">
        <div class="actions">
            <button>Save</button>
        </div>

        <div><input name="wordDe" value="{{wordDe}}"></div>
        <div><input name="wordEn" value="{{wordEn}}"></div>
        <div><input name="lautschrift" value="{{lautschrift}}" class="ipa"></div>
        <div><input name="wordType" value="{{wordType}}"></div>
        <div><input name="verbPresentThirdPerson" value="{{verbPresentThirdPerson}}"></div>
        <div><input name="verbPreteriteFirstPerson" value="{{verbPreteriteFirstPerson}}"></div>
        <div><input name="verbPreteriteThirdPerson" value="{{verbPreteriteThirdPerson}}"></div>
        <div><input name="verbPerfectAuxiliaryThird" value="{{verbPerfectAuxiliaryThird}}"></div>
        <div><input name="verbPastParticiple" value="{{verbPastParticiple}}"></div>
        <div><input name="nounArticle" value="{{nounArticle}}"></div>
        <div><input name="nounPlural" value="{{nounPlural}}"></div>
        <div><input name="nounGender" value="{{nounGender}}"></div>

        <div class="row">
            <div class="col-xs-6"><textarea
                    name="exampleSentenceDe">{{exampleSentenceDe}}</textarea></div>
            <div class="col-xs-6"><textarea
                    name="exampleSentenceEn">{{exampleSentenceEn}}</textarea></div>
        </div>

        {{#if examples}}
            <div class="all-examples">
                <h3>All examples:</h3>
                {{#each examples}}
                    <ul class="row">
                        {{#if de}}
                            <li class="col-xs-6 example">{{de}}</li>
                        {{/if}}
                        {{#if en}}
                            <li class="col-xs-6 example">{{en}}</li>
                        {{/if}}
                    </ul>
                {{/each}}
            </div>
        {{/if}}

        {{#if _id}}
            <div><input type="hidden" name="_id" value="{{_id }}"></div>
        {{/if}}

        <div class="actions">
            <button>Save</button>
        </div>

    </form>
</section>
