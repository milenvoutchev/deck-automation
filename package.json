{
  "name": "deck-automation",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "postinstall": "scripts/postinstall.sh",
    "prod:build": "babel server -d build",
    "prod:start": "node ./build/bin/start.js",
    "dev:watch": "nodemon -w server --exec \"npm run lint && npm run dev:start\"",
    "dev:start": "NODE_ENV=development babel-node ./server/bin/start.js",
    "dev:nolint": "nodemon -w server --exec \"npm run dev:start\"",
    "lint": "eslint --ext .js server",
    "lint:fix": "eslint --fix --ext .js server",
    "test": "jest server/tests/*",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watchAll"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~3.1.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.1",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "got": "^7.1.0",
    "hbs": "^4.0.1",
    "json2csv": "^3.11.5",
    "lodash": "^4.17.4",
    "mongoose": "^4.13.0",
    "morgan": "^1.9.0",
    "node-sass-middleware": "^0.11.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.4.0",
    "winston": "^2.4.0",
    "xml-js": "^1.5.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/index.js",
      "!server/config/*"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "server/tests/*"
    ],
    "delay": "250"
  }
}
